<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.sf.power.monitor">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PowerFailure">
        <activity
            android:name="net.sf.power.monitor.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.sf.power.monitor.PreferenceActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="net.sf.power.monitor.MainActivity" />

        <!--receiver android:name="net.sf.power.monitor.PowerConnectionReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED"/>
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED"/>
            </intent-filter>
        </receiver-->

        <service
            android:name="net.sf.power.monitor.PowerConnectionService"
            android:exported="false"
            android:process=":remote" />
    </application>

</manifest>
